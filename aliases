# General
alias aliases='grep alias < ~/.aliases | cut -c 7- | sort'
alias lsa='ls -lah'
alias mkdir='mkdir -p'
alias chown='chown -Rv'
alias chmod='chmod -Rv'
alias grep='grep --color=auto'
alias psaux='ps aux'
alias psl='psaux|more'
alias psg='psaux|grep'
alias topc='top -o vsize'
alias topm='top -o cpu'
alias meteo='curl -4 http://wttr.in/Moscow'
alias localip="ipconfig getifaddr en0"
alias ips='ifconfig -a | perl -nle"/(\d+\.\d+\.\d+\.\d+)/ && print $1"'
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias getnmap="nmap -sP 192.168.1.1/24"
alias week="date +%V"
alias fullupdate="brew update; brew upgrade --all; brew cleanup; sudo gem update --system; sudo gem update; cd $DOTFILES && git pull && cd $BINFILES && git pull"
alias update="cd $DOTFILES && git pull && cd $BINFILES && git pull"
alias feed='open http://feedly.com'
alias mostused="history | awk '{print $2}' | sort | uniq -c | sort -rn | head -10"
# shows the top 5 processes by cpu usage
alias top5="ps auxww | sort -rnk 3,3 | head -n 5 | awk '{ print \$3\" (\" \$2 \") \" \$11 }'"
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'

# Requires specific structure
alias code='cd $PROJECTS'
alias know='cd $PROJECTS/knowledge'
alias dl='cd ~/Downloads'
alias dt='cd ~/Desktop'
alias mu='cd ~/Music'
alias dot='cd $DOTFILES'
alias editlocal='vim ~/.localenv'
alias mybins='ps aux | grep -E "$USER.+bin"'

# Git aliases
alias glo="git log --oneline"
alias gaa="git add -A ."
alias gclean="git branch --merged | grep -v \"\*\" | xargs -n 1 git branch -d"
alias gmm="git fetch && git merge origin/master"
alias gn="git symbolic-ref -q HEAD | cut -d'/' -f 3"
alias gnc="gn | pbcopy"
alias gp="git pull"
alias gfm="gmm ; gsc; gulp build ; mur"
alias gsc="git diff --name-only --diff-filter=U"
alias gop="git-open"
alias gqs="git-quick-stats"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# Hide/show all hidden file icons
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder"
alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder"

# Specific soft needs to be installed
alias sb='git for-each-ref --sort=-committerdate refs/heads/ | cut -d'/' -f 3 | ipt | xargs git co'
alias ob='openbranch'
alias sd='scriptdone'
alias ci='git add . && prepci'
alias mur='ci Merged with master, rebuild'
alias diffancy='git diff --color | diff-so-fancy'
alias webdev='t list timeline dkunin/webdev -l -r -n 35'
alias mtg='$PROJECTS/mtglist/mtg'
alias magnetlist='gist -r 341a90e38ae9cd333cf8650975985f79'
alias ydl='youtube-dl -f "bestvideo[height<=480,ext=mp4]+bestaudio[ext=m4a]/best[height<=480]"'
alias tweet='t update'
alias notes='cd $PROJECTS/work-nindo'
alias syncvideo='rsync -aivhi --progress $VIDEOS_FOLDER/* root@$TABLET_SSH:/sdcard/Download/videos'
alias syncmp3='rsync -aivhir --progress $PROJECTS/watchlater-downloads/public/mp3 root@$TABLET_SSH:/sdcard/Music'
alias cleanvideos='rm -rf $PROJECTS/watchlater-downloads/public/videos/*'
alias pretty='prettier --single-quote --tab-width 4 --write'
alias svgoall='comparemaster | grep svg | while read i; do svgo $i; done'
alias cme="$DOTFILES/hooks/pre-commit"

# Gulp
alias gb='npm test && gulp build && sd'
alias gw='gulp apps:watch'

# OSX Specific
alias listdownloadedapps="find /Applications -path '*Contents/_MASReceipt/receipt' -maxdepth 4 -print |\sed 's#.app/Contents/_MASReceipt/receipt#.app#g; s#/Applications/##'"
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# Vagrant aliases
alias v='vagrant'
alias vup='vagrant up'
alias vde='vagrant destroy'
alias vss='vagrant ssh'
alias vha='vagrant halt'

# Docker
alias dr='docker run'
alias dri='docker run --rm -it'
alias dp='docker ps -a|grep -v gcr'
alias drm='docker rm'
alias dbi='docker build -t'
alias di='docker images | grep -v gcr'
alias docker-deamon='eval $(minikube docker-env)'
alias docker-vue-dev='docker run --rm -v $(pwd):/src -w /src -p 8080:8080 node:6 bash -c "npm install && npm run dev"'
alias docker-vue-build='docker run --rm -v $(pwd):/src -w /src node:6 bash -c "npm install && npm run build"'

# Disc utils
alias diskspace_report="df -P -kHl"
alias free_diskspace_report="diskspace_report"

# File size
alias fs="stat -f \"%z bytes\""

alias reload=source ~/.zshrc && echo 'Shell config reloaded from ~/.zshrc'
# SSH
alias ssh/droplet='ssh deploy@192.241.145.243'
