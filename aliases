alias lsa='ls -la'
alias mkdir='mkdir -p'
alias chown='chown -Rv'
alias chmod='chmod -Rv'
alias grep='grep --color=auto'
alias psaux='ps aux'
alias psl='psaux|more'
alias psg='psaux|grep'
alias topc='top -o vsize'
alias topm='top -o cpu'
alias meteo='curl -4 http://wttr.in/Moscow'
alias localip="ipconfig getifaddr en0"
alias ips='ifconfig -a | perl -nle"/(\d+\.\d+\.\d+\.\d+)/ && print $1"'
alias myip="dig +short myip.opendns.com @resolver1.opendns.com"
alias getnmap="nmap -sP 192.168.0.1/24"
alias update="brew update; brew upgrade --all; brew cleanup; sudo gem update --system; sudo gem update; cd $DOTFILES && git pull && cd $BINFILES"

# shows the top 5 processes by cpu usage
alias top5="ps auxww | sort -rnk 3,3 | head -n 5 | awk '{ print \$3\" (\" \$2 \") \" \$11 }'"

# Requires specific structure
alias code='cd $PROJECTS'
alias dl='cd ~/Downloads'
alias mu='cd ~/Music'
alias dot='cd $DOTFILES'
alias projectinit='npm init && geteslint && getjscsrc && geteditorconfig && getreadme && echo node_modules >> .gitignore'

# Git aliases
alias glo="git log --oneline"
alias gaa="git add -A ."
alias gclean="git branch --merged | grep -v "\*" | xargs -n 1 git branch -d"
alias mm="git fetch && git merge origin/master"
alias gn="git symbolic-ref -q HEAD | cut -d'/' -f 3 | pbcopy"
alias gp="git pull"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="defaults write com.apple.finder CreateDesktop -bool false && killall Finder"
alias showdesktop="defaults write com.apple.finder CreateDesktop -bool true && killall Finder"

# Hide/show all hidden file icons
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE && killall Finder"
alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE && killall Finder"

# Specific soft needs to be installed
alias sb='git for-each-ref --sort=-committerdate refs/heads/ | cut -d'/' -f 3 | ipt | xargs git co'
alias ob='openbranch'
alias sd='scriptdone'
alias gb='gulp build && sd'
alias gw='gulp watch'
alias ci='git add . && prepci'
alias mur='ci Merged with master, rebuild'
alias diffancy='git diff --color | diff-so-fancy'
alias webdev='t list timeline dkunin/webdev -l -r -n 35'
alias mtg='$PROJECTS/mtglist/mtg'
alias magnetlist='gist -r 341a90e38ae9cd333cf8650975985f79'

# NVM aliases
alias cub='nvm use 4.2.3'
alias mamabear='nvm use 5.9.0'
alias papabear='nvm use 6.2.1'
alias notes='cd $PROJECTS/work-nindo'