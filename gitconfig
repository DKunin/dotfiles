[user]
    name = Dmitri Kunin
    email = whitemarten@gmail.com
[github]
    user = dkunin
[color]
    ui = always
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
    removed = red
[alias]
    ci = commit
    st = status
    br = branch
    co = checkout
    df = diff
    lg = log -p
    who = shortlog -s --
    lrb = "!f() { \
        remote="${1:-origin}"; \
        git ls-remote --heads "$remote"; \
    }; f"
	quick-stats = ! /usr/local/bin/git-quick-stats
[credential]
    helper = osxkeychain
[push]
    default = simple
[pretty]
        custom = "%C(magenta)%h%C(red)%d %C(yellow)%ar %C(green)%s %C(yellow)(%an)"
        #                     │        │            │            │             └─ author name
        #                     │        │            │            └─ message
        #                     │        │            └─ date (relative)
        #                     │        └─ decorations (branch, heads or tags)
        #                     └─ hash (abbreviated)
[help]
    # Correct typos
    autocorrect = 1